<?xml version="1.0"?>
<map proto="1.3.5">
<name>Winter is Coming</name> <!--might be changed-->
<version>1.0.0</version>
<objective>Destroy the ennemy's monument and core.</objective>
<authors>
    <author>Timothee38</author> 
</authors>
<contributors>
    <contributor contribution="Feedback and probably XML Fixing.">_IQ</contributor>
</contributors>

<teams>
   <team id="red" color="dark red" max="42" max-overfill="50">Red Team</team>
   <team id="blue" color="blue" max="42" max-overfill="50">Blue Team</team>
</teams>

<kits>
    <kit name="spawn">
        <item slot="0">stone sword</item>
        <item slot="1" enchantment="arrow infinite: 1">bow</item>
        <item slot="3">stone axe</item>
        <item slot="2">diamond pickaxe</item>
        <item slot="4" amount="32">golden carrot</item>
        <item slot="5" amount="64" damage="2">log</item>
        <item slot="28" amount="1">arrow</item>
        <potion duration="3">heal</potion>
        <potion duration="3">damage resistance</potion>
    </kit>
    <kit name="red" parents="spawn">
        <helmet color="cd0000">leather helmet</helmet>
        <chestplate color="cd0000">leather chestplate</chestplate>
    </kit>
    <kit name="blue" parents="spawn">
        <helmet color="0066cc">leather helmet</helmet>
        <chestplate color="0066cc">leather chestplate</chestplate>
    </kit>
</kits>

<spawns>
    <spawn team="red" kit="red" yaw="-24">
        <point>79,4,-516</point>
    </spawn>
    <spawn team="blue" kit="blue" yaw="-158">
        <point>79,4,-265</point>
    </spawn>
    <default yaw="0">
        <cuboid min="54,90,-391" max="54,90,-390"/>
    </default>
</spawns>

<cores material="obsidian" leak="5">
    <core team="blue">
        <cuboid min="33,6,-266" max="28,17,-260"/>
    </core>
    <core team="red">
        <cuboid min="33,6,-515" max="27,17,-521"/>
    </core>
</cores>

<destroyables name="Monument" materials="obsidian" completion="100%" mode-changes="true">
    <destroyable owner="blue">
       <cuboid min="28,4,-301" max="24,9,-305"/>
    </destroyable>
    <destroyable owner="red">
       <cuboid min="24,4,-476" max="28,9,-480"/>
    </destroyable>
</destroyables>

<modes>
    <mode after="30m" material="beacon"/>
    <mode after="60m" material="gold block"/>
</modes>

<regions>
    <rectangle name="redspawn" min="91,-528" max="71,-501"/>
    <rectangle name="bluespawn" min="91,-253" max="72,-281"/>
    <apply block="deny-all">
        <region name="redspawn"/>
        <region name="bluespawn"/>
    </apply>
</regions>

<itemremove>
    <item>carpet</item>
    <item>golden carrot</item>
    <item>leather chestplate</item>
    <item>leather helmet</item>
    <item>arrow</item>
    <item>apple</item>
    <item>crops</item>
    <item>sapling</item>
    <item>grass</item>
    <item>red rose</item>
    <item>stained clay</item>
    <item>obsidian</item>
    <item>wool</item>
</itemremove>
<toolrepair>
    <tool>diamond pickaxe</tool>
    <tool>bow</tool>
    <tool>stone sword</tool>
    <tool>iron sword</tool>
</toolrepair>

<maxbuildheight>31</maxbuildheight>

<timelock>on</timelock>

</map>

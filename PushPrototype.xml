<?xml version="1.0"?>
<map proto="1.3.3">
<name>Push: Prototype</name>
<version>1.0.0</version>
<objective>Try not to get pushed in the pit, or try to push the other team in the pit.</objective>
<authors>
    <author>Timothee38</author>
</authors>
<blitz>
    <time>5m</time>
    <lives>1</lives>
    <title>Push!</title>
</blitz>
<include src="blitz-global.xml"/>
<teams>
   <team color="blue" max="5" max-overfill="7">Pushers</team>
   <team color="dark red" max="5" max-overfill="7">Pushed</team>
</teams>
<kits>
    <kit name="pushers">
        <helmet color="334CB2" damage="-3000">leather helmet</helmet>
        <chestplate color="334CB2" damage="-3000">leather chestplate</chestplate>
        <leggings color="334CB2" damage="-3000">leather leggings</leggings>
        <boots color="334CB2" damage="-3000">leather boots</boots>
    </kit>
    <kit name="pushed">
        <item enchantement="knockback:2" name="`4Repel Stick">stick</item>
        <helmet color="993333" damage="-3000">leather helmet</helmet>
        <chestplate color="993333" damage="-3000">leather chestplate</chestplate>
        <leggings color="993333" damage="-3000">leather leggings</leggings>
        <boots color="993333" damage="-3000">leather boots</boots>
    </kit>
    <kit name="makes-them-invicible">
        <!--TODO-->
    </kit>
    <kit name="kills-them">
        <!--TODO-->
    </kit>
</kits>
<spawns>
    <spawn team="pushers" kit="pushers" yaw="180">
        <cuboid min="-5,7,19" max="-4,7,18" />
    </spawn>
    <spawn team="pushed" kit="pushed" yaw="0">
        <cuboid min="-5,7,7" max="-4,7,8" />
    </spawn>
    <default yaw="180">
        <cuboid min="-5,17,33" max="-4,17,32" />
    </default>
</spawns>
<filters>
    <filter name="only-pushed"><!--Only pushed may fall in the pit-->
        <team>pushed</team>
    </filter>
</filters>
<regions>
    <apply enter="only-pushed">
        <rectangle name="pit" min="-11,-11" max="1,1" />
    </apply>
    <apply block="deny-all">
        <rectangle name="deny-all" min="-oo,-oo" max="oo,oo" />
    </apply>
    <cuboid name="arena" min="5,6,0" max="-14,16,21" /><!--Where they push each other, so they need to be invincible--> 
    <apply kit="makes-them-invicible">
        <region name="arena" />
    </apply>
    <apply kit="kills-them">
        <negative><region name="arena" /></negative>
    </apply>
</regions>
<hunger>
    <depletion>off</depletion>
</hunger>
<killreward>
    <item damage="1" enchantement="knockback:1">wood sword</item>
</killreward>
</map>
